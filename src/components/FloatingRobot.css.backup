.floating-robot-container {
  position: fixed;
  top: 120px; /* Moved down by 40px */
  left: 20px;
  width: 300px;
  height: 300px;
  z-index: 1000;
  pointer-events: none;
  
  /* Make the container completely invisible */
  background: transparent !important;
  backdrop-filter: none !important;
  border: none !important;
  box-shadow: none !important;
  border-radius: 0 !important;
}

.floating-robot-container canvas {
  border-radius: 0 !important;
  pointer-events: auto;
  background: transparent !important;
  border: none !important;
  outline: none !important;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .floating-robot-container {
    width: 200px;
    height: 200px;
    top: 110px;
    left: 10px;
  }
}

@media (max-width: 480px) {
  .floating-robot-container {
    width: 150px;
    height: 150px;
    top: 100px;
    left: 5px;
  }
}

/* Ghost-like floating animation with doubled boundaries */
@keyframes float {
  0% { 
    transform: translateY(0px) translateX(0px); 
  }
  10% { 
    transform: translateY(-6px) translateX(4px); 
  }
  20% { 
    transform: translateY(-12px) translateX(10px); 
  }
  30% { 
    transform: translateY(-16px) translateX(16px); 
  }
  40% { 
    transform: translateY(-12px) translateX(20px); 
  }
  50% { 
    transform: translateY(-4px) translateX(18px); 
  }
  60% { 
    transform: translateY(4px) translateX(12px); 
  }
  70% { 
    transform: translateY(10px) translateX(4px); 
  }
  80% { 
    transform: translateY(12px) translateX(-4px); 
  }
  90% { 
    transform: translateY(6px) translateX(-8px); 
  }
  100% { 
    transform: translateY(0px) translateX(0px); 
  }
}

.floating-robot-container {
  animation: float 8s cubic-bezier(0.4, 0.0, 0.6, 1.0) infinite;
}

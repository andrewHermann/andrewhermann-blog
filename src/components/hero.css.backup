.hero-simple-container {
  width: 100%;
  background-color: var(--dl-color-theme-neutral-light);
  padding: var(--dl-layout-space-threeunits) 0 var(--dl-layout-space-twounits) 0;
  margin-top: 80px; /* Account for navbar */
}

.hero-simple-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--dl-layout-space-twounits);
  text-align: center;
}

.hero-simple-title {
  font-size: 3rem;
  font-weight: 700;
  color: var(--dl-color-theme-primary);
  margin-bottom: var(--dl-layout-space-unit);
  line-height: 1.2;
}

.hero-simple-description {
  font-size: 1.25rem;
  color: var(--dl-color-theme-neutral-dark);
  line-height: 1.6;
  max-width: 800px;
  margin: 0 auto;
}

@media (max-width: 768px) {
  .hero-simple-container {
    padding: var(--dl-layout-space-twounits) 0 var(--dl-layout-space-oneandhalfunits) 0;
  }
  
  .hero-simple-title {
    font-size: 2.25rem;
  }
  
  .hero-simple-description {
    font-size: 1.125rem;
  }
}

@media (max-width: 480px) {
  .hero-simple-title {
    font-size: 1.875rem;
  }
  
  .hero-simple-description {
    font-size: 1rem;
  }
}

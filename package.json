{
  "name": "andrewhermann",
  "version": "2.0.0",
  "private": true,
  "proxy": "http://localhost:3001",
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dangerous-html": "0.1.13",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "framer-motion": "^12.23.6",
    "multer": "^2.0.2",
    "next": "^15.4.2",
    "prop-types": "15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.30.0",
    "react-scroll-parallax": "^3.4.5",
    "serve": "^14.2.4",
    "sqlite3": "^5.1.7",
    "three": "^0.178.0"
  },
  "scripts": {
    "serve": "serve -s build -l 5000",
    "start": "craco start",
    "build": "GENERATE_SOURCEMAP=false craco build",
    "test": "craco test --env=jsdom",
    "eject": "craco eject",
    "lint": "eslint src/ --ext .js,.jsx --config .eslintrc.js",
    "lint:fix": "eslint src/ --ext .js,.jsx --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\" --ignore-path .gitignore",
    "check:all": "npm run lint && npm run lint:css && npm run build"
  },
  "engines": {
    "node": ">=18.x"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "eslint": "^9.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "react-scripts": "^5.0.1",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^38.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/setupTests.js",
      "!src/testUtils.js",
      "!<rootDir>/node_modules/",
      "!<rootDir>/coverage/",
      "!<rootDir>/build/"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
